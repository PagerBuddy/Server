[Unit]
Description=PagerBuddy

[Service]
ExecStart=/usr/bin/node run-func %pagerbuddy%/dist/src/index.js start
Restart=always
RestartPreventExitStatus=1000
RestartSec=2
User=nobody
Group=nogroup
Type=simple
Environment=NODE_PORT=3000
WorkingDirectory=%pagerbuddy%

[Install]
WantedBy=multi-user.target